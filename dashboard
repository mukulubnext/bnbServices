import React, { useState, useEffect } from 'react';
import { Menu, X, ChevronRight, Search, Info, Phone, Mail, MessageCircle, MapPin, ExternalLink, Globe, ShoppingBag, Store } from 'lucide-react';

const App = () => {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [isScrolled, setIsScrolled] = useState(false);
  const [currentPage, setCurrentPage] = useState('home'); // 'home', 'about', 'contact', or 'register'

  // Color Palette Constants from User Prompt
  const theme = {
    dark: '#005b4c',      // Deep Green
    muted: '#bdb19f',     // Tan/Khaki
    light: '#f5e9d6',     // Light Cream
    highlight: '#ffeeca'  // Pale Yellow
  };

  // Handle scroll effect for navbar background transparency
  useEffect(() => {
    const handleScroll = () => {
      setIsScrolled(window.scrollY > 50);
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  const navLinks = [
    { name: 'Home', id: 'home' },
    { name: 'About', id: 'about' },
    { name: 'Contact', id: 'contact' },
    { name: 'Solutions', id: 'solutions' },
    { name: 'Products', id: 'products' },
  ];

  const handleNavigation = (id) => {
    if (['home', 'about', 'contact', 'register'].includes(id)) {
      setCurrentPage(id);
      window.scrollTo(0, 0);
    }
    setIsMenuOpen(false);
  };

  return (
    <div 
      className="min-h-screen font-sans" 
      style={{ backgroundColor: theme.dark, color: theme.light }}
    >
      {/* Navbar Container */}
      <nav
        className={`fixed w-full z-50 transition-all duration-300 px-6 py-4 ${
          isScrolled || isMenuOpen
            ? 'shadow-2xl border-b border-white/5'
            : 'bg-transparent'
        }`}
        style={{ 
          backgroundColor: isScrolled || isMenuOpen ? theme.dark : 'transparent',
          color: theme.light 
        }}
      >
        <div className="max-w-7xl mx-auto flex items-center justify-between">
          {/* Logo Section */}
          <div 
            onClick={() => handleNavigation('home')}
            className="flex items-center gap-2 cursor-pointer group"
          >
            <div 
              className="w-8 h-8 rounded-lg flex items-center justify-center group-hover:rotate-12 transition-transform shadow-lg"
              style={{ backgroundColor: theme.light, color: theme.dark }}
            >
              <span className="font-bold text-xl">S</span>
            </div>
            <span className="text-xl font-bold tracking-tight">SOLARIS</span>
          </div>

          {/* Desktop Navigation Links */}
          <div className="hidden md:flex items-center gap-8">
            {navLinks.map((link) => (
              <button
                key={link.id}
                onClick={() => handleNavigation(link.id)}
                className="text-sm font-medium transition-colors relative group"
                style={{ color: currentPage === link.id ? theme.highlight : theme.muted }}
              >
                {link.name}
                <span 
                  className={`absolute -bottom-1 left-0 h-0.5 transition-all ${
                    currentPage === link.id ? 'w-full' : 'w-0 group-hover:w-full'
                  }`}
                  style={{ backgroundColor: theme.highlight }}
                ></span>
              </button>
            ))}
          </div>

          {/* Desktop Actions */}
          <div className="hidden md:flex items-center gap-4">
            <button className="p-2 hover:bg-white/10 rounded-full transition-colors" style={{ color: theme.muted }}>
              <Search size={20} />
            </button>
            <button 
              onClick={() => handleNavigation('register')}
              className="px-6 py-2.5 rounded-full text-sm font-bold transition-all transform hover:-translate-y-0.5 shadow-md"
              style={{ backgroundColor: theme.light, color: theme.dark }}
            >
              Register
            </button>
          </div>

          {/* Mobile Menu Toggle */}
          <div className="md:hidden flex items-center">
            <button
              onClick={() => setIsMenuOpen(!isMenuOpen)}
              className="p-2 rounded-lg hover:bg-white/10 transition-colors"
            >
              {isMenuOpen ? <X size={28} /> : <Menu size={28} />}
            </button>
          </div>
        </div>

        {/* Mobile Menu Overlay */}
        <div
          className={`absolute top-full left-0 w-full shadow-2xl transition-all duration-300 ease-in-out md:hidden overflow-hidden ${
            isMenuOpen ? 'max-h-[600px] opacity-100 border-t border-white/5' : 'max-h-0 opacity-0'
          }`}
          style={{ backgroundColor: theme.dark }}
        >
          <div className="p-6 flex flex-col gap-6">
            {navLinks.map((link) => (
              <button
                key={link.id}
                onClick={() => handleNavigation(link.id)}
                className="flex items-center justify-between text-lg font-medium transition-colors text-left"
                style={{ color: currentPage === link.id ? theme.highlight : theme.light }}
              >
                {link.name}
                <ChevronRight size={18} style={{ color: theme.muted }} />
              </button>
            ))}
            <hr className="border-white/5" />
            <div className="flex flex-col gap-4 pt-2">
              <button 
                onClick={() => handleNavigation('register')}
                className="w-full py-3 text-center font-bold rounded-xl"
                style={{ backgroundColor: theme.light, color: theme.dark }}
              >
                Register Now
              </button>
            </div>
          </div>
        </div>
      </nav>

      {/* Main Content Area */}
      <main>
        {currentPage === 'home' && (
          <section className="relative h-[90vh] flex items-center justify-center overflow-hidden">
            <div className="absolute inset-0 z-0">
              <img
                src="https://images.unsplash.com/photo-1497215728101-856f4ea42174?auto=format&fit=crop&q=80&w=2070"
                className="w-full h-full object-cover grayscale opacity-40"
                alt="Background"
              />
              {/* Theme Gradient Overlay */}
              <div 
                className="absolute inset-0 bg-gradient-to-r"
                style={{ backgroundImage: `linear-gradient(to right, ${theme.dark}, transparent)` }}
              ></div>
            </div>
            <div className="relative z-10 max-w-7xl mx-auto px-6 text-center md:text-left w-full">
              <div className="max-w-2xl">
                <span 
                  className="inline-block px-4 py-1.5 mb-6 text-sm font-bold tracking-widest uppercase rounded-full border"
                  style={{ backgroundColor: `${theme.highlight}22`, borderColor: theme.highlight, color: theme.highlight }}
                >
                  Solaris Evolution
                </span>
                <h1 className="text-5xl md:text-7xl font-extrabold mb-6 leading-tight" style={{ color: theme.light }}>
                  Building the <br /> 
                  <span style={{ color: theme.highlight }}>digital horizon.</span>
                </h1>
                <p className="text-xl mb-10 max-w-lg leading-relaxed" style={{ color: theme.muted }}>
                  Connect with a global ecosystem of buyers and sellers using our high-performance cloud infrastructure.
                </p>
                <div className="flex flex-col sm:flex-row gap-4">
                  <button 
                    className="px-8 py-4 rounded-full font-bold text-lg hover:shadow-xl transition-all"
                    style={{ backgroundColor: theme.light, color: theme.dark }}
                  >
                    Get Started
                  </button>
                  <button 
                    className="px-8 py-4 bg-white/5 border rounded-full font-bold text-lg hover:bg-white/10 transition-all"
                    style={{ borderColor: theme.muted, color: theme.muted }}
                  >
                    Learn More
                  </button>
                </div>
              </div>
            </div>
          </section>
        )}

        {currentPage === 'about' && (
          <section className="relative h-screen flex items-center justify-center overflow-hidden">
            <div className="absolute inset-0 z-0">
              <img
                src="https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&q=80&w=2069"
                className="w-full h-full object-cover grayscale opacity-20"
                alt="About Background"
              />
            </div>
            <div className="relative z-10 max-w-4xl mx-auto px-6 text-center">
              <div className="mb-8 flex justify-center">
                <div 
                  className="p-4 rounded-full border shadow-inner"
                  style={{ backgroundColor: `${theme.highlight}11`, borderColor: theme.highlight }}
                >
                  <Info style={{ color: theme.highlight }} size={40} />
                </div>
              </div>
              <h2 className="text-4xl md:text-6xl font-bold mb-8" style={{ color: theme.light }}>Our Mission</h2>
              <p className="text-xl md:text-2xl leading-relaxed font-light" style={{ color: theme.muted }}>
                We bridge the gap between innovation and reality. Our deep green roots represent stability, 
                while our light-speed tools empower you to reach the summit of your digital ambitions.
              </p>
              <div className="mt-12 h-1 w-24 mx-auto rounded-full" style={{ backgroundColor: theme.highlight }}></div>
            </div>
          </section>
        )}

        {currentPage === 'contact' && (
          <section className="relative min-h-screen pt-32 pb-20 flex items-center justify-center overflow-hidden">
            {/* Background */}
            <div className="absolute inset-0 z-0 opacity-10 grayscale">
              <img
                src="https://images.unsplash.com/photo-1423666639041-f56000c27a9a?auto=format&fit=crop&q=80&w=2074"
                className="w-full h-full object-cover"
                alt="Contact Background"
              />
            </div>

            <div className="relative z-10 max-w-6xl mx-auto px-6 w-full">
              <div className="text-center mb-16">
                <h2 className="text-4xl md:text-5xl font-bold mb-4" style={{ color: theme.light }}>Get in Touch</h2>
                <p className="text-lg max-w-xl mx-auto" style={{ color: theme.muted }}>
                  Whether you need technical support or have a business inquiry, our team is ready to assist you.
                </p>
              </div>

              <div className="grid md:grid-cols-2 gap-8">
                {/* Technical Help Card - Using Shared Code Details */}
                <div 
                  className="backdrop-blur-xl border p-8 rounded-3xl transition-colors"
                  style={{ backgroundColor: 'rgba(255,255,255,0.03)', borderColor: 'rgba(255,255,255,0.1)' }}
                >
                  <h3 className="text-2xl font-bold mb-4 flex items-center gap-3">
                    <span className="w-10 h-10 rounded-full flex items-center justify-center" style={{ backgroundColor: `${theme.highlight}22` }}>
                      <Globe size={20} style={{ color: theme.highlight }} />
                    </span>
                    Technical Help
                  </h3>
                  <p className="mb-8 leading-relaxed" style={{ color: theme.muted }}>
                    Experiencing issues with our platform? Our engineering support team is available 24/7 for critical incidents.
                  </p>
                  <div className="flex flex-col gap-4">
                    <a href="mailto:support@solaris.io" className="flex items-center gap-4 p-4 rounded-2xl transition-colors hover:bg-white/5">
                      <Mail style={{ color: theme.highlight }} />
                      <div>
                        <p className="text-xs uppercase font-bold tracking-wider" style={{ color: theme.muted }}>Email Support</p>
                        <p className="font-medium" style={{ color: theme.light }}>support@solaris.io</p>
                      </div>
                    </a>
                    <a href="https://wa.me/1234567890" className="flex items-center gap-4 p-4 rounded-2xl transition-colors hover:bg-white/5">
                      <MessageCircle style={{ color: theme.highlight }} />
                      <div>
                        <p className="text-xs uppercase font-bold tracking-wider" style={{ color: theme.muted }}>WhatsApp Chat</p>
                        <p className="font-medium" style={{ color: theme.light }}>Start Conversation</p>
                      </div>
                    </a>
                  </div>
                </div>

                {/* Business Help Card - Using Shared Code Details */}
                <div 
                  className="backdrop-blur-xl border p-8 rounded-3xl transition-colors"
                  style={{ backgroundColor: 'rgba(255,255,255,0.03)', borderColor: 'rgba(255,255,255,0.1)' }}
                >
                  <h3 className="text-2xl font-bold mb-4 flex items-center gap-3">
                    <span className="w-10 h-10 rounded-full flex items-center justify-center" style={{ backgroundColor: `${theme.highlight}22` }}>
                      <ExternalLink size={20} style={{ color: theme.highlight }} />
                    </span>
                    Business & Sales
                  </h3>
                  <p className="mb-8 leading-relaxed" style={{ color: theme.muted }}>
                    Interested in enterprise plans? Connect with our executives to find the perfect solution for you.
                  </p>
                  <div className="flex flex-col gap-4">
                    <a href="tel:+15550001234" className="flex items-center gap-4 p-4 rounded-2xl transition-colors hover:bg-white/5">
                      <Phone style={{ color: theme.highlight }} />
                      <div>
                        <p className="text-xs uppercase font-bold tracking-wider" style={{ color: theme.muted }}>Call Our Sales Team</p>
                        <p className="font-medium" style={{ color: theme.light }}>+1 (555) 000-1234</p>
                      </div>
                    </a>
                    <div className="flex items-center gap-4 p-4 rounded-2xl">
                      <MapPin style={{ color: theme.highlight }} className="shrink-0" />
                      <div>
                        <p className="text-xs uppercase font-bold tracking-wider" style={{ color: theme.muted }}>Headquarters</p>
                        <p className="font-medium" style={{ color: theme.light }}>123 Innovation Drive, Silicon Valley, CA</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              {/* Map Button */}
              <div className="mt-12 text-center">
                <button 
                  className="inline-flex items-center gap-2 px-8 py-4 rounded-full font-bold shadow-xl transition-all"
                  style={{ backgroundColor: theme.light, color: theme.dark }}
                >
                  <MapPin size={18} />
                  Open in Google Maps
                </button>
              </div>
            </div>
          </section>
        )}

        {currentPage === 'register' && (
          <section className="relative h-screen flex items-center justify-center overflow-hidden">
            <div className="absolute inset-0 z-0 opacity-10 grayscale">
              <img
                src="https://images.unsplash.com/photo-1556761175-b413da4baf72?auto=format&fit=crop&q=80&w=2074"
                className="w-full h-full object-cover"
                alt="Register Background"
              />
            </div>
            <div className="relative z-10 max-w-5xl mx-auto px-6 w-full text-center">
              <h2 className="text-4xl md:text-6xl font-bold mb-4" style={{ color: theme.light }}>Choose Your Role</h2>
              <p className="text-lg md:text-xl mb-12 max-w-2xl mx-auto" style={{ color: theme.muted }}>
                Select how you would like to participate in the Solaris network.
              </p>
              <div className="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
                {/* Seller Option */}
                <button 
                  className="group relative overflow-hidden border p-10 rounded-[2.5rem] transition-all duration-500 text-left"
                  style={{ backgroundColor: 'rgba(255,255,255,0.03)', borderColor: 'rgba(255,255,255,0.1)' }}
                >
                  <div className="mb-6 w-16 h-16 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform" style={{ backgroundColor: `${theme.highlight}22` }}>
                    <Store style={{ color: theme.highlight }} size={32} />
                  </div>
                  <h3 className="text-2xl font-bold mb-3" style={{ color: theme.light }}>Join as a Seller</h3>
                  <p className="mb-6 text-sm leading-relaxed" style={{ color: theme.muted }}>
                    Manage inventory, reach millions, and scale your storefront globally.
                  </p>
                  <div className="inline-flex items-center gap-2 font-bold" style={{ color: theme.highlight }}>
                    Start Selling <ChevronRight size={20} className="group-hover:translate-x-1 transition-transform" />
                  </div>
                </button>

                {/* Buyer Option */}
                <button 
                  className="group relative overflow-hidden border p-10 rounded-[2.5rem] transition-all duration-500 text-left"
                  style={{ backgroundColor: 'rgba(255,255,255,0.03)', borderColor: 'rgba(255,255,255,0.1)' }}
                >
                  <div className="mb-6 w-16 h-16 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform" style={{ backgroundColor: `${theme.highlight}22` }}>
                    <ShoppingBag style={{ color: theme.highlight }} size={32} />
                  </div>
                  <h3 className="text-2xl font-bold mb-3" style={{ color: theme.light }}>Join as a Buyer</h3>
                  <p className="mb-6 text-sm leading-relaxed" style={{ color: theme.muted }}>
                    Browse tools, manage subscriptions, and enjoy exclusive marketplace benefits.
                  </p>
                  <div className="inline-flex items-center gap-2 font-bold" style={{ color: theme.highlight }}>
                    Start Shopping <ChevronRight size={20} className="group-hover:translate-x-1 transition-transform" />
                  </div>
                </button>
              </div>
            </div>
          </section>
        )}
      </main>

      {/* Footer */}
      <footer className="py-12 px-6 border-t border-white/5 text-center">
        <p className="text-xs" style={{ color: theme.muted }}>Â© 2024 Solaris Network Inc. Defined by Deep Green and Light Tones.</p>
      </footer>
    </div>
  );
};

export default App;
